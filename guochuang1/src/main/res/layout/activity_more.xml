<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">

    <include layout="@layout/title_bar2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|top"
            android:orientation="vertical">


            <TextView
                android:id="@+id/more_tv"
                android:layout_marginTop="15sp"
                style="@style/more_tvstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/more_img"
                style="@style/more_imgstyle"
                android:layout_width="wrap_content"
                android:layout_height="250sp"
                android:scaleType="fitCenter"
                android:layout_marginVertical="15sp"
                android:src="@drawable/more1" />

            <TextView
                android:id="@+id/more_tv2"
                style="@style/more_tvstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/more_img2"
                style="@style/more_imgstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more2" />

            <TextView
                android:id="@+id/more_tv3"
                style="@style/more_tvstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/more_img3"
                style="@style/more_imgstyle"
                android:layout_width="wrap_content"
                android:layout_height="250sp"
                android:src="@drawable/more3" />

            <TextView
                android:id="@+id/more_tv4"
                style="@style/more_tvstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/more_img4"
                style="@style/more_imgstyle"
                android:layout_width="wrap_content"
                android:layout_height="250sp"
                android:src="@drawable/more4" />

            <TextView
                android:id="@+id/more_tv5"
                style="@style/more_tvstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/more_img5"
                style="@style/more_imgstyle"
                android:layout_width="wrap_content"
                android:layout_height="230sp"
                android:src="@drawable/cafe1" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>