<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="60sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.home.HomeFragment">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="60dp"
                app:layout_constraintDimensionRatio="2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bc1"
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/frame"
                app:layout_constraintBottom_toBottomOf="@id/set"
                app:layout_constraintTop_toBottomOf="@id/banner" />

            <TextView
                android:id="@+id/set"
                style="@style/clickTextView"
                android:drawableTop="@drawable/set"
                android:drawablePadding="3sp"
                android:text="座位预约"
                app:layout_constraintEnd_toStartOf="@id/food"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/banner" />

            <TextView
                android:id="@+id/food"
                style="@style/clickTextView"
                android:drawableTop="@drawable/food"
                android:drawablePadding="3sp"
                android:text="美食"
                app:layout_constraintEnd_toStartOf="@id/book"
                app:layout_constraintStart_toEndOf="@id/set"
                app:layout_constraintTop_toBottomOf="@id/banner" />

            <TextView
                android:id="@+id/book"
                style="@style/clickTextView"
                android:drawableTop="@drawable/book"
                android:drawablePadding="3sp"
                android:text="书籍借阅"
                app:layout_constraintEnd_toStartOf="@id/server"
                app:layout_constraintStart_toEndOf="@id/food"
                app:layout_constraintTop_toBottomOf="@id/banner" />

            <TextView
                android:id="@+id/server"
                style="@style/clickTextView"
                android:drawableTop="@drawable/server"
                android:drawablePadding="3sp"
                android:text="其他服务"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/book"
                app:layout_constraintTop_toBottomOf="@id/banner" />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"
                android:background="@color/black"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/bc1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:text="热门推荐"
                android:textColor="@color/black"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1" />

            <TextView
                android:id="@+id/main_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:layout_marginRight="15sp"
                android:drawableRight="@drawable/back2"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="全部"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"
                android:columnCount="3"
                app:layout_constraintTop_toBottomOf="@id/main_more">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.example.guochuang1.RoundAngleImageView
                        style="@style/image"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:src="@drawable/studyingroom" />

                    <TextView
                        style="@style/info"
                        android:text="null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.example.guochuang1.RoundAngleImageView
                        style="@style/image"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:src="@drawable/studyingroom" />

                    <TextView
                        style="@style/info"
                        android:text="null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.example.guochuang1.RoundAngleImageView
                        style="@style/image"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:src="@drawable/studyingroom" />

                    <TextView
                        style="@style/info"
                        android:text="null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.example.guochuang1.RoundAngleImageView
                        style="@style/image"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:src="@drawable/studyingroom" />

                    <TextView
                        style="@style/info"
                        android:text="null" />

                </LinearLayout>

                <TextView
                    android:layout_height="80sp"
                    android:layout_width="120sp"
                    android:drawableTop="@drawable/ic_test"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="454"/>
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>